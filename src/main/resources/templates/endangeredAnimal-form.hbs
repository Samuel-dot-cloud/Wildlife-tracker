{{#partial "content"}}

    {{#if editEndangeredAnimal}}
        <h1>Edit this Endangered Animal!</h1>
        <form action="/endangeredAnimals/{{endangeredAnimal.id}}" method="post">
            <br>
            <label for="animal_name">Endangered Animal Name</label>
            <input id="animal_name" name="animal_name" type="text" value="{{endangeredAnimal.animal_name}}" class="form-control">
            <br>
            <label for="animal_age">Age</label>
            <select id="animal_age" name="animal_age" type="text" value="{{endangeredAnimal.animal_health}}" class="form-control">
                <option>New Born</option>
                <option>Young</option>
                <option>Old</option>
            </select>
            <br>
            <label for="animal_health">Health status</label>
            <select id="animal_health" name="animal_health" type="text" value="{{endangeredAnimal.animal_health}}" class="form-control">
                <option>Healthy</option>
                <option>Okay</option>
                <option>Ill</option>
            </select>
            <br>
            <label for="sighting_id">Update records on the animal's sighting:</label>
            <select id="sighting_id" name="sighting_id" class="form-control">
                {{#each sightings}}
                    <option value="{{id}}">{{ranger_name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right ranger?<a href="/sighting/new">Add them first.</a></p>
            <button type="submit" class="btn btn-default">Update endangered species</button>
        </form>
    {{else}}
        <h2>Add a new Endangered Animal!</h2>

        <form action="/endangeredAnimals/{{endangeredAnimal.id}}" method="post">
            {{#if sightings}}
                <label for="animal_name">Name</label>
                <input id="animal_name" name="animal_name" type="text" class="form-control">
                <br>
                <label for="animal_age">Age</label>
                <select id="animal_age" name="animal_age" type="text" class="form-control">
                    <option>New Born</option>
                    <option>Young</option>
                    <option>Old</option>
                </select>
                <br>
                <label for="animal_health">Health status</label>
                <select id="animal_health" name="animal_health" type="text" class="form-control">
                    <option>Healthy</option>
                    <option>Okay</option>
                    <option>Ill</option>
                </select>
                <br>
                <label for="sighting_id">Update this hero's squad:</label>
                <select id="sighting_id" name="sighting_id" class="form-control">
                    {{#each sightings}}
                        <option value="{{id}}">{{ranger_name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right ranger?<a href="/sighting/new">Add them first.</a></p>
            {{else}}
                <h3> You'll need to add a sighting before you add an endangered animal. <a href="/sightings/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Save endangered species</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}
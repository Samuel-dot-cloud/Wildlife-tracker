{{#partial "content"}}

    {{#if editAnimal}}
        <h1>Edit this Animal!</h1>
        <form action="/animals/{{animal.id}}" method="post">
            <br>
            <label for="animal_name">Animal Name</label>
            <input id="animal_name" name="animal_name" type="text" value="{{animal.animal_name}}" class="form-control">
            <br>
            <label for="sighting_id">Update records on the animal's sighting:</label>
            <select id="sighting_id" name="sighting_id" class="form-control">
                {{#each sightings}}
                    <option value="{{id}}">{{ranger_name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right ranger?<a href="/sighting/new">Add them first.</a></p>
            <button type="submit" class="btn btn-default">Update animal details</button>
        </form>
    {{else}}
        <h2>Add a new Animal!</h2>

        <form action="/animals/{{animal.id}}" method="post">
            {{#if sightings}}
                <label for="animal_name">Animal Name</label>
                <input id="animal_name" name="animal_name" type="text" class="form-control">
                <br>
                <label for="sighting_id">Add the ranger that made this sighting:</label>
                <select id="sighting_id" name="sighting_id" class="form-control">
                    {{#each sightings}}
                        <option value="{{id}}">{{ranger_name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right ranger?<a href="/sighting/new">Add them first.</a></p>
            {{else}}
                <h3> You'll need to add a sighting before you add an animal. <a href="/sightings/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Save animal details</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}